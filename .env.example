# ====================
# REQUIRED
# ====================

# Database - PostgreSQL connection string
# For local: postgresql://localhost:5432/your_db_name
# For hosted: Get from Neon, Supabase, Railway, etc.
DATABASE_URL="postgresql://user:password@host:5432/database"

# ====================
# IMAGE STORAGE (Cloudflare R2)
# ====================

# R2 endpoint URL (without bucket name)
R2_ENDPOINT="https://ACCOUNT_ID.r2.cloudflarestorage.com"

# R2 API credentials (create at Cloudflare Dashboard > R2 > Manage R2 API Tokens)
R2_ACCESS_KEY_ID="your-access-key-id"
R2_SECRET_ACCESS_KEY="your-secret-access-key"

# R2 bucket name
R2_BUCKET_NAME="your-bucket-name"

# R2 public URL (enable public access on bucket first)
R2_PUBLIC_URL="https://pub-xxx.r2.dev"

# ====================
# ANALYTICS (PostHog)
# ====================

# Client-side PostHog (for user tracking)
NEXT_PUBLIC_POSTHOG_KEY="phc_your_project_api_key"
NEXT_PUBLIC_POSTHOG_HOST="https://us.posthog.com"

# Server-side PostHog (for analytics API - Personal API Key)
POSTHOG_PERSONAL_API_KEY="phx_your_personal_api_key"
POSTHOG_PROJECT_ID="12345"

# ====================
# OPTIONAL
# ====================

# External API keys for AI features (if using)
ANTHROPIC_API_KEY="sk-ant-..."
